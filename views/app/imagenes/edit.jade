extends ../../layout.jade
block contenido
	div(class="container")
		div(class="col-md-4 col-sm-6 col-xs-10  remove-float center-block  big-top-space")
			h1 Subir nueva Imagen
			form(action="/app/imagenes/#{imagen.id}?_method=PUT" method="POST")
				div(class="form-group")
					label(for="title") Título
					input(type="text" name="title" placeholder="Título de la imagen ... " id="title" class="form-control" value='#{imagen.title}')
				div(class="row")
					div(class="col-xs-12 col-sm-6")
						input(type="submit" value="Guardar"  class="btn btn-info")
					