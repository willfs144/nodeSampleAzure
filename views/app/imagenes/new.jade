extends ../../layout.jade
block contenido
	div(class="container")
		div(class="col-md-4 col-sm-6 col-xs-10  remove-float center-block  big-top-space")
			h1 Subir nueva Imagen
			form(action="/app/imagenes", method="POST" enctype="multipart/form-data")
				div(class="form-group")
					label(for="title") Título
					input(type="text" name="title" placeholder="Título de la imagen ... " id="title" class="form-control")
				div(class="form-group")
					label(for="archivo") Imagen
					input(type="file" name="archivo" id="archivo" class="form-control")
				div(class="row")
					div(class="col-xs-12 col-sm-6")
						input(type="submit" value="Guardar"  class="btn btn-info")
					div(class="col-xs-12 col-sm-6 text-right")
						a(href="/signup") No tengo cuenta